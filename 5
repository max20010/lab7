#include "pch.h"
#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	int x,x1,x2,x3,x4;
	cout << "Введите четырёхзначное число: ";
	cin >> x;
	x4 = x % 10;
	x3 = (x % 100)/10;
	x2 = (x % 1000)/100;
	x1 = x / 1000;
	if ((x1 == x2 && x3 == x4) || (x1 == x4 && x2 == x3)) {
		cout << "Данное число читается одинаково слева направо и справа налево " << endl;
	}
	else
	{
		cout << "Данное число не читается одинаково слева направо и справа налево " << endl;
	}
}

