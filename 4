#include "pch.h"
#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	int a, x1,x2,x3;
	cout << "Введите трёхзначное число: ";
	cin >> a;
	x1 = a / 100;
	x3 = a % 10;
    x2 = (a%100-x3)/10;
	if (x1 < x2 && x2 < x3) {
		cout << "Цифры данного числа образуют возрастающую последовательность" << endl;
	}
	if (x1 > x2 && x2 > x3) {
		cout << "Цифры данного числа образуют убывающую последовательность" << endl;
	}
}
